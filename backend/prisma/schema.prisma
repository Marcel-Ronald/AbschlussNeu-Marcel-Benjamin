generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Diet {
  id           Int     @id @default(autoincrement())
  diet_type    String
  prey_example String
  sharks       Shark[]
}

model Habitat {
  id                Int      @id @default(autoincrement())
  region            String
  temperature_range String
  depth_range_m     String
  sharks            Shark[]
}

model Shark {
  id                Int           @id @default(autoincrement())
  name              String
  scientific_name   String
  average_length_m  Float
  average_weight_kg Float
  lifespan_years    Int
  habitat_id        Int
  diet_id           Int
  geburtsort        String
  nahrung           String
  gefahr            String
  gewohnheiten      String
  image             String
  habitat           Habitat       @relation(fields: [habitat_id], references: [id])
  diet              Diet          @relation(fields: [diet_id], references: [id])
  observations      Observation[]
}

model Observation {
  id            Int      @id @default(autoincrement())
  shark_id      Int
  location      String
  date_observed DateTime
  length_m      Float
  weight_kg     Float
  notes         String
  shark         Shark    @relation(fields: [shark_id], references: [id])
}
